module andoperation_tb;

    // Parameters
    parameter N = 8;
    
    // Signals
    logic [N-1:0] a, b;
    logic [N-1:0] result;
    
    // Instantiate the module
    andoperation #(N) andmodule (
        .a(a),
        .b(b),
        .result(result)
    );

    // Test stimulus
    initial begin
        // Initialize inputs
        a = 8'h0A; // Example value for a
        b = 8'h05; // Example value for b
        
        // Apply stimulus
        #5;
        $display(a, b);
        
        // Perform operation
        #5;
        $display(result);
        
        // End simulation
        $finish;
    end

endmodule
